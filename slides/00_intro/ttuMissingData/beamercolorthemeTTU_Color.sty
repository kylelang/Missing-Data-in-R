% Provides color specifications for the TTU beamer theme

\definecolor{TTU_RED}{RGB}{153,0,0}

\mode<presentation>

\setbeamercolor*{palette primary}{fg=white,bg=TTU_RED}
\setbeamercolor*{palette secondary}{fg=white,bg=TTU_RED!75!black}
\setbeamercolor*{palette tertiary}{fg=white,bg=TTU_RED!50!black}
\setbeamercolor*{palette quaternary}{fg=white,bg=black} 

\setbeamercolor*{sidebar}{bg=TTU_RED}


\setbeamercolor*{block title}{fg=white, bg=TTU_RED!75!black}
\setbeamercolor*{block body}{fg=black, bg=normal text.bg!90!black}
\setbeamercolor*{qed symbol}{fg=black}

\setbeamercolor*{block title example}{fg=white, bg=TTU_RED!75!black}
\setbeamercolor*{block body example}{fg=black, bg=normal text.bg!90!black}
  
\setbeamercolor*{palette sidebar primary}{fg=TTU_RED!10}
\setbeamercolor*{palette sidebar secondary}{fg=white}
\setbeamercolor*{palette sidebar tertiary}{fg=TTU_RED!50}
\setbeamercolor*{palette sidebar quaternary}{fg=white}

\setbeamercolor*{titlelike}{parent=palette primary}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\setbeamercolor{section number projected}{bg=TTU_RED}
\setbeamercolor{section in toc}{fg=TTU_RED}
\setbeamercolor{item}{fg=TTU_RED}

\setbeamercolor{bibliography item}{fg=black}
\setbeamercolor{bibliography entry author}{fg=TTU_RED}
\setbeamercolor{bibliography entry location}{fg=TTU_RED!65!white}  
\setbeamercolor{bibliography entry note}{fg=TTU_RED!40!white}
